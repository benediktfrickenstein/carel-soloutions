void harvestTheField () {
    repeat (2) {
        pickUp();
        repeat (2) {
            moveForward();
            moveForward();
            turnLeft();
        } 
        pickUp();
        turnAround();
    }   
}

void pickUp () {
    repeat (4) {
        moveForward();
        pickBeeper();
        turnRight();
        moveForward();
        turnLeft();
    }
}
